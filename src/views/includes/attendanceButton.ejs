<div class="attendace-wrapper">
    <div class="attendace-form">
        <form action="/attendance/start" method="GET">

            <button <%=isStarted ? 'disabled' : confirmed ? 'disabled' : isStarted===null ? '' : '' %>
                class="btn-custom" type="submit">Điểm Danh
            </button>
            <input type="hidden" name="mode" value="start">
            <input type="hidden" name="_csrf" value="<%=csrfToken%>">
        </form>
        <form action="/attendance/end" method="POST">
            <input type="hidden" name="_csrf" value="<%=csrfToken%>">
            <button <%=isStarted ? '' : isStarted===null ? '' : 'disabled' %>
                class="btn-custom" type="submit">Kết Thúc Làm
            </button>
            <input type="hidden" name="mode" value="end">
        </form>
        <form action="/attendance/leaveForm" method="GET">
            <input type="hidden" name="_csrf" value="<%=csrfToken%>">
            <button <%=confirmed ? 'disabled' : '' %> class="btn-custom" type="submit">Nghỉ
                Phép</button>
        </form>
    </div>