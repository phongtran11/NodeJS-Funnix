<div class="attendace-wrapper">
    <div class="attendace-form">
        <form action="/attendance/start" method="GET">
            <button <%=isStarted ? '' : 'disabled' %> class="btn" type="submit">Điểm Danh</button>
            <input type="hidden" name="mode" value="start">
        </form>
        <form action="/attendance/end" method="POST">
            <button <%=isStarted ? 'disabled' : '' %> class="btn" type="submit">Kết Thúc Làm</button>
            <input type="hidden" name="mode" value="end">
        </form>
        <form action="/attendance/annualLeave" method="GET">
            <button class="btn" type="submit">Nghỉ Phép</button>
        </form>
    </div>